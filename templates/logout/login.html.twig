{% extends "logout/base.html.twig" %}

{% block content %}
<form action="{{ path('index') }}" method="post" class="mx-auto mt-3 mb-5 text-center">
	{% if error_message is defined %}
		<p class="error_message">{{ error_message }}</p>
	{% endif %}

	<div class="form-group text-center">
		<label for="login_email">Identifiant</label>
		<input type="text" id="login_email" name="login_email" placeholder="e-mail" required class="form-control mx-auto">
	</div>

	<div class="form-group">
		<label for="login_password">Mot de passe</label>
		<input type="password" id="login_password" name="login_password" required class="form-control mx-auto">
	</div>

	<div class="form-check">
		<input type="checkbox" name="permanent_connection" id="permanent_connection" required class="form-check-input">
		<label for="permanent_connection" class="form-check-label">Rester connecté</label>
	</div>

	<p class="my-3"><a href="#">Mot de passe oublié</a><br></p>
	<input type="submit" value="Se connecter" class="btn btn-blue"><br>
</form>

<p class="text-center"><button type="button" class="btn btn-blue"><a href="{{ path('account_creation') }}">Créer un compte</a></button></p>
{% endblock %}