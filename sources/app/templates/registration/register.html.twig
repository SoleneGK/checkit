{% extends 'page.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
	{{ form_start(registrationForm, { 'attr': { 'class': 'form-when-no-user-logged text-center mx-auto'} }) }}
		<h1 class="mb-5">Check it</h1>

		<h2 class="h3 mb-3 font-weight-normal">Créer un compte</h2>

		{{ form_label(registrationForm.username) }}
		{{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control mb-3'}}) }}
		{{ form_errors(registrationForm.username) }}

		{{ form_label(registrationForm.email) }}
		{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control mb-3'}}) }}
		{{ form_errors(registrationForm.email) }}

		{{ form_label(registrationForm.password.first) }}
		{{ form_widget(registrationForm.password.first, { 'attr': {'class': 'form-control mb-3'}}) }}

		{{ form_label(registrationForm.password.second) }}
		{{ form_widget(registrationForm.password.second, { 'attr': {'class': 'form-control mb-3'}}) }}	


		<div class="my-4">
			{{ form_widget(registrationForm.agreeTerms) }}
			{{ form_label(registrationForm.agreeTerms) }}	
		</div>

		<button class="btn btn-blue">Créer le compte</button>
	{{ form_end(registrationForm) }}
{% endblock %}
